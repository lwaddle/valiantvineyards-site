---
import BaseLayout from "../layouts/BaseLayout.astro";
import { Image } from "astro:assets";
import Button from "../components/Button.astro";
import heroImage from "../assets/images/wine-bottles-with-medals-landscape.jpg";

// Wine bottle images
import wildGrapePort from "../assets/images/wine-bottles/2002-wild-grape.png";
import cockNHen from "../assets/images/wine-bottles/cock-n-hen.png";
import fullThrottle from "../assets/images/wine-bottles/full-throttle-cabernet.png";
import rushmoreRed from "../assets/images/wine-bottles/rushmore-red.png";
import rushmoreWhite from "../assets/images/wine-bottles/rushmore-white.png";
import sweetRed from "../assets/images/wine-bottles/sweet-red.png";
import sweetWhite from "../assets/images/wine-bottles/sweet-white.png";
import tickleMeRhubarb from "../assets/images/wine-bottles/tickle-me-rhubarb.png";
import turkeyRidgeChardonnay from "../assets/images/wine-bottles/turkey-ridge-creek-american-chardonnay.png";
import turkeyRidgeMerlot from "../assets/images/wine-bottles/turkey-ridge-creek-merlot.png";

const wines = [
  {
    name: "2002 Wild Grape Port",
    image: wildGrapePort,
    category: "Port",
    description: "A superb vintage for Wild Grape Port made with Vitis Riparia native grapes. Features flavors of caramel, peanut brittle, apricot, plum, raisin, and walnut.",
    buyLink: "https://vinoshipper.com/catalog/South-Dakota-Wines/valiant_vineyards_inc/wild_grape_port_85311"
  },
  {
    name: "Full Throttle",
    image: fullThrottle,
    category: "Dry Red",
    description: "Dark dry Cabernet Sauvignon jacked-up with French American Hybrids. Big, rich, jammy with berry and red fruit flavors.",
    buyLink: "https://vinoshipper.com/catalog/South-Dakota-Wines/valiant_vineyards_inc/full_throttle_american_cabernet_85240"
  },
  {
    name: "Turkey Ridge Creek Merlot",
    image: turkeyRidgeMerlot,
    category: "Semi-Dry Red",
    description: "Semi-dry with smooth tannins and wild blackberry and red fruit flavor.",
    buyLink: "https://vinoshipper.com/catalog/South-Dakota-Wines/valiant_vineyards_inc/turkey_ridge_creek_merlot_85300"
  },
  {
    name: "Turkey Ridge Creek Chardonnay",
    image: turkeyRidgeChardonnay,
    category: "Dry White",
    description: "Pleasing and sleek with apple, mineral, and oak notes.",
    buyLink: "https://vinoshipper.com/catalog/South-Dakota-Wines/valiant_vineyards_inc/turkey_ridge_creek_chardonnay_85303"
  },
  {
    name: "Cock n Hen",
    image: cockNHen,
    category: "Semi-Dry White",
    description: "Semi-dry white wine blend with slight acidity that adds a spritzy sensation. Notes of lemon, lime, green apple, and blossoms. Pairs wonderfully with wild game birds.",
    buyLink: "https://vinoshipper.com/catalog/South-Dakota-Wines/valiant_vineyards_inc/cock_n_hen_85304"
  },
  {
    name: "Rushmore Red",
    image: rushmoreRed,
    category: "Semi-Sweet Red",
    description: "Fruit forward semi-sweet red blend featuring raspberry and plum with spiced undertones.",
    buyLink: "https://vinoshipper.com/catalog/South-Dakota-Wines/valiant_vineyards_inc/rushmore_red_85301"
  },
  {
    name: "Rushmore White",
    image: rushmoreWhite,
    category: "Sweet White",
    description: "Sweet white wine with tastes of apricot, lime and honey plus floral and citrus notes.",
    buyLink: "https://vinoshipper.com/catalog/South-Dakota-Wines/valiant_vineyards_inc/rushmore_white_85299"
  },
  {
    name: "Sweet Red",
    image: sweetRed,
    category: "Sweet Red",
    description: "A tangy integration of ripe raspberry, red currant, and plum with peppery spice.",
    buyLink: "https://vinoshipper.com/catalog/South-Dakota-Wines/valiant_vineyards_inc/sweet_red_85307"
  },
  {
    name: "Sweet White",
    image: sweetWhite,
    category: "Sweet White",
    description: "Sweet wine with flavors of peaches and orange blossoms, citrussy and fruity.",
    buyLink: "https://vinoshipper.com/catalog/South-Dakota-Wines/valiant_vineyards_inc/sweet_white_85306"
  },
  {
    name: "Tickle Me! Rhubarb",
    image: tickleMeRhubarb,
    category: "Rosé",
    description: "Tart yet sweet rosé made from South Dakota rhubarb with a slightly pink color. Pairs perfectly with Key Lime Pie.",
    buyLink: "https://vinoshipper.com/catalog/South-Dakota-Wines/valiant_vineyards_inc/tickle_me_rhubarb_85302"
  }
];
---

<BaseLayout title="Wines" description="Explore our collection of award-winning wines crafted with care at Valiant Vineyards.">
  <!-- Hero Section -->
  <section class="relative">
    <div class="relative min-h-[50vh] lg:min-h-[60vh] flex items-center justify-center py-24">
      <Image
        src={heroImage}
        alt="Award-winning Valiant Vineyards wine bottles with competition medals"
        class="absolute inset-0 h-full w-full object-cover object-center"
        widths={[640, 1024, 1536, 2048]}
        sizes="100vw"
        quality={90}
      />
      <div class="absolute inset-0 bg-black/50"></div>

      <div class="container relative mx-auto px-4 lg:px-8 text-center">
        <h1 class="font-serif text-4xl font-semibold tracking-tight text-white sm:text-5xl lg:text-6xl">
          Our Wines
        </h1>
        <p class="mt-4 text-xl text-white font-semibold max-w-2xl mx-auto [text-shadow:0_1px_4px_rgb(0_0_0/60%)]">
          Award-winning wines crafted with passion in South Dakota
        </p>
      </div>
    </div>
  </section>

  <!-- Introduction -->
  <section class="py-12 lg:py-16">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="mx-auto max-w-3xl text-center">
        <p class="text-lg text-muted-foreground">
          From bold reds to crisp whites, our wines reflect the spirit and landscape of South Dakota. Each bottle is crafted with over two decades of experience and a commitment to quality.
        </p>
      </div>
    </div>
  </section>

  <!-- Wine Grid -->
  <section class="pb-16 lg:pb-24">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3 xl:gap-10">
        {wines.map((wine) => (
          <article class="group flex flex-col bg-white rounded-lg shadow-md overflow-hidden transition-shadow hover:shadow-xl">
            <div class="py-8 px-4 flex items-center justify-center">
              <Image
                src={wine.image}
                alt={wine.name}
                class="h-64 w-auto object-contain transition-transform duration-300 group-hover:scale-105"
                widths={[200, 300]}
                sizes="200px"
                quality={85}
              />
            </div>
            <div class="p-6 flex flex-col grow">
              <p class="text-sm font-medium text-gold uppercase tracking-wide mb-1">
                {wine.category}
              </p>
              <h2 class="font-serif text-xl font-semibold text-foreground mb-3">
                {wine.name}
              </h2>
              <p class="text-muted-foreground text-sm leading-relaxed mb-4">
                {wine.description}
              </p>
              <Button
                href={wine.buyLink}
                variant="gold-outline"
                size="sm"
                class="mt-auto self-start"
                target="_blank"
                rel="noopener noreferrer"
              >
                Buy Now
              </Button>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="bg-neutral-900 py-16 lg:py-20">
    <div class="container mx-auto px-4 lg:px-8 text-center">
      <h2 class="font-serif text-3xl font-semibold tracking-tight text-white sm:text-4xl mb-4">
        Visit Our Tasting Room
      </h2>
      <p class="text-neutral-300 max-w-2xl mx-auto mb-8">
        Experience our wines firsthand at our tasting room in Vermillion, South Dakota. Our knowledgeable staff will guide you through our collection.
      </p>
      <Button href="/tasting-room" variant="gold">
        Plan Your Visit
      </Button>
    </div>
  </section>
</BaseLayout>
