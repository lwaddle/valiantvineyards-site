---
interface Props {
  href?: string;
  variant?: "primary" | "secondary" | "ghost" | "destructive";
  size?: "sm" | "md" | "lg";
  type?: "button" | "submit" | "reset";
  class?: string;
}

const {
  href,
  variant = "primary",
  size = "md",
  type = "button",
  class: extra = "",
} = Astro.props as Props;

const classes = `btn btn-${variant} ${size !== "md" ? `btn-${size}` : ""} ${extra}`;
---

{href ? (
  <a href={href} class={classes}>
    <slot />
  </a>
) : (
  <button type={type} class={classes}>
    <slot />
  </button>
)}